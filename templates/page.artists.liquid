<div class="page-width">
  <header class="section-header text-center">
    <h1>{{ page.title }}</h1>
  </header>

  {% if page.content != blank %}
  <div class="rte">
    {{ page.content }}
  </div>
  {% endif %}

  <ul class="grid grid--flex grid--uniform">
    {% for collection in collections %}
      {%- if collection.template_suffix == 'artist-featured' -%}
        {% include 'artist-grid-item', collection: collection %}
      {%- endif -%}
    {% endfor %}
  </ul>

  <ul class="grid grid--flex grid--uniform">
    {% for collection in collections %}
      {%- if collection.template_suffix == 'artist' -%}
        {% include 'artist-grid-item', collection: collection %}
      {%- endif -%}
    {% endfor %}
  </ul>
</div>
