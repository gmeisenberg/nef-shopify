{% if sc_param != blank %}
  {% assign id = sc_param %}
{% else %}
  {% capture id %}{% include 'shortcode-render' render:'id' default:'' %}{% endcapture %}
{% endif %}

{% assign theme = 'bgcol=ffffff&linkcol=333333' %}
{% if request.page_type == 'collection' and collection.template_suffix == 'release' %}
  {% assign theme = 'bgcol=333333&linkcol=ffffff' %}
{% endif %}

<figure class="media-container media-container__video sc-grid__item">
  <iframe src="https://bandcamp.com/VideoEmbed?track={{ id }}&{{ theme }}" mozallowfullscreen="1" webkitallowfullscreen="1" allowfullscreen="1" seamless></iframe>
</figure>